<%- include('partials/header.ejs', locals.name) %>
<!-- prettier-ignore -->

<% if (posts.length === 0) { %>
<main class="home">
  <div class="container home__container <% if (!locals.name) { %> hide <% } %>">
    <div class="home__heading-box">
      <h1 class="heading-primary">Welcome to your blog <%= name %></h1>
    </div>
    <div class="home__content">
      <div class="home__text-box">
        <p>
          <%= name %>'s blog is a personal space where you can share anything you're passionate
          about. You have full control to create new posts, edit existing ones, or delete posts as
          you see fit.
        </p>
      </div>
      <div class="home__list-box">
        <ul class="home__list">
          <li class="home__item">Create Posts</li>
          <li class="home__item">View Your Posts</li>
          <li class="home__item">Edit/Delete Your Posts</li>
        </ul>
      </div>
    </div>
  </div>
</main>
<% } else{%> <%- include('viewPosts.ejs') %> <% } %>
<!-- prettier-ignore -->
<%- include('partials/footer.ejs') %>
